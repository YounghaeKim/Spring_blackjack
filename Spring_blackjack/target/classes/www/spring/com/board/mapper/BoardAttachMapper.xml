<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="www.spring.com.board.mapper.BoardAttachMapper">

	<insert id="insert">
	insert into qna_attach (uuid, uploadPath, fileName, fileType, bno)
	values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno} )
	</insert>
	
	
	<delete id="delete">
	
	delete from qna_attach where uuid = #{uuid}
	
	</delete>
	
	<select id="findByBno" resultType="www.spring.com.board.model.BoardAttachVO">
	select * from qna_attach where bno = #{bno}
	</select>
	
	<delete id="deleteAll">
	
	delete qna_attach where bno = #{bno}
	
	</delete>
	
	<select id="getOldFiles" resultType="www.spring.com.board.model.BoardAttachVO">
	select * from qna_attach where uploadpath = to_char(sysdate -1,'yyyy\mm\dd')	
	</select>

</mapper>